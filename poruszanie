#poruszanie się zwierzątek 

import random

class Animals:
    wspolrzedneX = ''
    wspolrzedneY = ''

    def __init__(self,wspolrzedneX,wspolrzedneY):
        self.wspolrzedneX = wspolrzedneX
        self.wspolrzedneY = wspolrzedneY

    def poruszanieX(self,ruchX):     #zwierzątko porusza się prawo/lewo
        self.ruchX=random.randint(-10,10)        #losujemy liczbę kroków
        if self.ruchX > 0:           #jeśli liczba jest większa od zera, zwierzę przesuwa się w prawo
            self.wspolrzedneX += self.ruchX
            if self.ruchX == 1:
                print("Zwierzę przesunęło się o", self.ruchX, "krok w prawo.")
            elif self.ruchX == 2 or self.ruchX == 3 or self.ruchX == 4:
                print("Zwierzę przesunęło się o", self.ruchX, "kroki w prawo.")
            else:
                print("Zwierzę przesunęło się o", self.ruchX, "kroków w prawo.")
            print("Jego obecne współrzędne to: ", self.wspolrzedneX,"&", self.wspolrzedneY,".")
        elif self.ruchX < 0:          #jeśli liczba jest mniejsza od zera, zwierzę porusza się w lewo
            self.ruchX = abs(self.ruchX)           #abs - zwraca wartość bezwzględną liczby (wtedy przy wyświetlanej liczbie kroków nie ma minusa, czyli tego, że zwierzę przesunęło się o -5 kroków w lewo)
            self.wspolrzedneX -= abs(self.ruchX)
            if self.ruchX == 1:
                print("Zwierzę przesunęło się o", self.ruchX, "krok w lewo.")
            elif self.ruchX == 2 or self.ruchX == 3 or self.ruchX == 4:
                print("Zwierzę przesunęło się o", self.ruchX, "kroki w lewo.")
            else:
                print("Zwierzę przesunęło się o", self.ruchX, "kroków w lewo.")
            print("Jego obecne współrzędne to: ", self.wspolrzedneX,"&", self.wspolrzedneY,".")

    def poruszanieY(self,ruchY):         #zwierzątko porusza się góra/dół (wszystko analogicznie do prawo/lewo)
        self.ruchY=random.randint(-10,10)
        if self.ruchY > 0:
            self.wspolrzedneY += self.ruchY
            if self.ruchY == 1:
                print("Zwierzę przesunęło się o", self.ruchY, "krok w dół.")
            elif self.ruchY == 2 or self.ruchY == 3 or self.ruchY == 4:
                print("Zwierzę przesunęło się o", self.ruchY, "kroki w dół.")
            else:
                print("Zwierzę przesunęło się o", self.ruchY, "kroków w dół.")
            print("Jego obecne współrzędne to: ", self.wspolrzedneX,"&", self.wspolrzedneY,".")
        elif self.ruchY < 0:
            self.ruchY = abs(self.ruchY) 
            self.wspolrzedneY -= abs(self.ruchY)
            if self.ruchY == 1:
                print("Zwierzę przesunęło się o", self.ruchY, "krok w górę.")
            elif self.ruchY == 2 or self.ruchY == 3 or self.ruchY == 4:
                print("Zwierzę przesunęło się o", self.ruchY, "kroki w górę.")
            else:
                print("Zwierzę przesunęło się o", self.ruchY, "kroków w górę.")
            print("Jego obecne współrzędne to: ", self.wspolrzedneX,"&", self.wspolrzedneY,".")


#dodałam przykład, żeby sprawdzić, czy wszystko działa 
cat=Animals(50,50)       #tutaj wpisujemy początkowe współrzędne zwierzaka
print("Początkowe współrzędne to:", cat.wspolrzedneX,cat.wspolrzedneY,".")
for i in range(10):      #można tutaj zrobić żeby zwierzątko sobie chodziło cały czas, ale najpierw chyba trzeba zrobić granice
    cat.poruszanieX(cat.wspolrzedneX)
    cat.poruszanieY(cat.wspolrzedneY)
